%li
  %h2.cbp-nttrigger= survey.name

  .cbp-ntcontent
    %p
      = link_to survey, remote: true, class: 'action-right delete-survey',
        method: :delete, data: { confirm: 'Are you sure?' } do
        %button.btn.btn-danger.btn-xs= icon('times', 'Delete')

      = link_to edit_survey_path(survey), remote: true, class: 'action-right' do
        %button.btn.btn-default.btn-xs= icon('pencil', 'Edit')

    - survey.questions.each do |question|
      %ul.cbp-ntsubaccordion
        %li      
          %h3.cbp-nttrigger= question.content

          .cbp-ntcontent
            - question.answers.each do |answer|
              %ul
                %li= answer.content
